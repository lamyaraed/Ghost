{
  "steps": [
     {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "us-central1-docker.pkg.dev/$PROJECT_ID/ghost-app/ghost-app:$COMMIT_SHA",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "us-central1-docker.pkg.dev/$PROJECT_ID/ghost-app/ghost-app:$COMMIT_SHA"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "compute",
        "rolling-updates",
        "start",
        "ghost-mig",
        "--version-template=latest",
        "--zone=us-central1-c",
        "--max-surge=1",
        "--max-unavailable=0",
        "--min-instance-update-time=1s",
        "--quiet"
      ]
    }
  ],
  "timeout": "4000s"
}